generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Memory {
  id         Int      @id @default(autoincrement())
  day        Int
  title      String?
  text       String
  imagePath  String?   // относительный путь, например "/public/uploads/123.jpg"
  visible    Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Compliment {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
}
